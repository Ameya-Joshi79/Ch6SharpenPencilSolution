<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseMusicFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/welcome_txt_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Search Music"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/search_music_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Search Music"
        app:layout_constraintEnd_toEndOf="@+id/welcome_txt_search"
        app:layout_constraintStart_toStartOf="@+id/welcome_txt_search"
        app:layout_constraintTop_toBottomOf="@+id/welcome_txt_search" />
</androidx.constraintlayout.widget.ConstraintLayout>